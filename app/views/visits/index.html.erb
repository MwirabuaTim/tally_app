<h1>All visits</h1>
<%= link_to 'All Customers', customers_path, class: "pull-right" %>
<table>
  <thead>
    <tr>
      <th>Business</th>
      <th>Customer</th>
      <th>Date and time</th>
      <th>Options</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <% for visit in current_business.visits %>
      <tr>
        <td><%= visit.business_id %></td>
        <td><%= visit.customer_id %></td>
        <td><%= visit.created_at %></td>

        <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Visit', new_visit_path, class: "btn btn-success" %>
