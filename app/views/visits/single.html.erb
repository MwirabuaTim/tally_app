<h1>Your Customers</h1>
<%= link_to 'All Customer Visits', visits_path, class: "pull-right" %>


    <% if !current_business.customers.blank? %>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Email</th>
              <th>No. Visits</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>


          <tbody>

      <% for customer in current_business.customers.uniq %>
           <!-- customer.id.each do |c| %> -->
              
                <tr>
                  <td><%= customer.id %></td>
                  <td><%= customer.email %></td>
                  <td><%= customer.visits.count %></td>
                  <td><%= link_to 'Show', customer %></td>
                  <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
                  <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <!-- end %> -->
      <% end %>
          </tbody>
        </table>
    <% else %>
      No Visits Yet!
    <% end %>

<br>

<%= link_to 'New Visit', new_visit_path, class: "btn btn-success" %>

